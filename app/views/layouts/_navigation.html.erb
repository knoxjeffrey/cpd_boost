<div class="navbar-header">
  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria controls="navbar">
    <span class="sr-only">Toggle Navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
  <%= link_to "CPD Boost", root_path, :class => 'navbar-brand' %>
</div> 

<div id="navbar" class="collapse navbar-collapse">
  <ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
    	<%= link_to "#", class: "dropdown-toggle", "data-toggle" => 'dropdown', "role" => "button" do  %>
        Categories <span class='caret'>
      <% end %>
      <ul class="dropdown-menu" role="menu">
        <% Category.all.each do |category| %>
          <li><%= link_to category.name, category_path(category) %></li>
        <% end %>
        <% if logged_in? and current_user.admin? %>
          <li class='divider'></li>
          <li>
            <%= link_to(new_category_path) do %>
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
              New Category
            <% end %>
          </li>
        <% end %>
      </ul>
    </li>
    <% if logged_in? %>
      <li class="dropdown">
      	<%= link_to '', class: "dropdown-toggle", "data-toggle" => 'dropdown', "role" => "button" do  %>
          <%= current_user.username %> <span class='caret'>
        <% end %>
        <ul class="dropdown-menu" role="menu">
          <li>
            <%= link_to edit_user_path(current_user) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> edit profile
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user) do %>
              <span class="glyphicon glyphicon-bookmark" aria-hidden="true"></span> bookmarks
            <% end %>
          </li>
          <li>
            <%= link_to logout_path do %>
              <span class="glyphicon glyphicon-off" aria-hidden="true"></span> log out
            <% end %>
          </li>
        </ul>
      </li>
    <% else %>
      <li>
        <%= link_to 'Log In', login_path %>
      </li>
      <li class='active'>
        <%= link_to 'Register', register_path %>
      </li>
    <% end %>
  </ul>
</div>
